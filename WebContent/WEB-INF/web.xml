<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Calendar</display-name>
  <context-param>
    <description>
  	Vaadin production mode</description>
    <param-name>productionMode</param-name>
    <param-value>false</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>Demo</servlet-name>
    <servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
    <init-param>
      <description>
  		Vaadin application class to start</description>
      <param-name>application</param-name>
      <param-value>com.vaadin.addon.calendar.demo.CalendarTest</param-value>
    </init-param>
    <init-param>
      <description>
  		Application widgetset</description>
      <param-name>widgetset</param-name>
      <param-value>com.vaadin.addon.calendar.gwt.CalendarWidgetset</param-value>
    </init-param>
  </servlet>
  
  <!--  Testing -->
	<servlet>
		<servlet-name>TestingApplication</servlet-name>
		<servlet-class>
		com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>		
		<init-param>
			<param-name>application</param-name>
			<param-value>com.vaadin.addon.calendar.test.TestingApplication</param-value>
		</init-param>
		<init-param>
			<param-name>widgetset</param-name>
			<param-value>com.vaadin.addon.calendar.gwt.CalendarWidgetset</param-value>
		</init-param>
   </servlet>	
    
  <servlet-mapping>
		<servlet-name>TestingApplication</servlet-name>
		<url-pattern>/test/*</url-pattern>
  </servlet-mapping>		
	
  <servlet-mapping>
    <servlet-name>Demo</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>Demo</servlet-name>
    <url-pattern>/VAADIN/*</url-pattern>
  </servlet-mapping>
  
</web-app>